<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/layout_margin_8"
    android:layout_marginRight="@dimen/layout_margin_8"
    android:layout_marginTop="@dimen/layout_margin_4"
    android:layout_marginBottom="@dimen/layout_margin_4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/local_list_item_image"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/layout_margin_8"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/local_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/layout_margin_4"/>

            <TextView
                android:id="@+id/local_list_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/layout_margin_4"/>
            <TextView
                android:id="@+id/local_list_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/layout_margin_4"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
